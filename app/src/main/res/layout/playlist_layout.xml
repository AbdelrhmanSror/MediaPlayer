<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/playlistContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/medium_horizontal_spacing"
            app:cardElevation="@dimen/small_vertical_spacing"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/large_vertical_spacing"
                android:layout_marginBottom="@dimen/large_vertical_spacing"
                android:layout_marginStart="@dimen/large_horizontal_spacing"
                android:layout_marginEnd="@dimen/medium_horizontal_spacing"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/AlbumArt"
                    android:layout_gravity="center_vertical"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:circularImageUri="@{playlistModel.albumCoverUri}"
                    tools:srcCompat="@drawable/default_image" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium_vertical_spacing"
                    android:layout_marginEnd="@dimen/medium_vertical_spacing"
                    android:layout_weight="3"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        android:textSize="16sp"
                        style="@style/media_title_style"
                        android:text="@{playlistModel.title}"
                        tools:text="StarBoy" />

                    <TextView
                        android:id="@+id/actor"

                        style="@style/media_subtitle_style"
                        android:text="@{playlistModel.actor}"
                        tools:text="Calvin Harris" />

                </LinearLayout>

                <com.example.mediaplayer.customViews.CustomDropDownMenu
                    android:id="@+id/spinner"
                    app:drawable="@drawable/ic_more_vert_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:dropDownMenu="@menu/track_option_menu"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <data>

        <variable
            name="playlistModel"
            type="com.example.mediaplayer.model.SongModel" />

        <variable
            name="arrayRes"
            type="Integer" />
    </data>


</layout>