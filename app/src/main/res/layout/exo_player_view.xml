<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/exoPlayerContainer"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <ImageView
            android:id="@id/exo_artwork"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="@dimen/medium_vertical_spacing"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="@dimen/medium_vertical_spacing"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/default_image" />


        <View
            android:id="@id/exo_controller_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_horizontal_spacing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/songActor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_horizontal_spacing"
            android:layout_marginTop="@dimen/medium_vertical_spacing"
            android:layout_marginEnd="@dimen/medium_horizontal_spacing"
            tools:text="Maher Zain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/songName" />

        <TextView
            android:id="@+id/songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_horizontal_spacing"
            android:layout_marginTop="@dimen/medium_vertical_spacing"
            android:layout_marginEnd="@dimen/medium_horizontal_spacing"
            android:fontFamily="@font/archivo_black"
            tools:text="Taki Taki"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exo_artwork" />

    </androidx.constraintlayout.widget.ConstraintLayout>
