<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="@dimen/medium_vertical_spacing"
    android:layout_weight="2"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notification_title"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        tools:text="Ghafir" />

    <TextView
        android:id="@+id/notification_subtitle"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        tools:text="OurQuraan.Com-Khalid Galil" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/notification_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_gray"

            tools:background="@drawable/previous_collapsed_notification" />

        <ImageButton
            android:id="@+id/notification_play_pause_button"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/dark_gray"

            android:layout_height="wrap_content"
            tools:background="@drawable/pause_collapsed_notification" />

        <ImageButton
            android:id="@+id/notification_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_gray"

            tools:background="@drawable/next_collapsed_notification" />

        <ImageButton
            android:id="@+id/notification_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_gray"
            android:layout_gravity="end|top"
            android:layout_marginEnd="@dimen/small_vertical_spacing"
            tools:background="@drawable/close_collapsed_notification" />
    </LinearLayout>

</LinearLayout>


